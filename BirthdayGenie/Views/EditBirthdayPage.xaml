<?xml version="1.0" encoding="utf-8" ?>
<uranium:UraniumContentPage x:Class="BirthdayGenie.Views.EditBirthdayPage"
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
            xmlns:local="clr-namespace:BirthdayGenie">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Entry x:Name="NameEntry" Placeholder="Name" />
            <DatePicker x:Name="BirthdayPicker" />
            <Picker x:Name="CategoryPicker" Title="Select Category" />
            <Picker x:Name="BrandPicker" Title="Select Brand" />
            <Picker x:Name="StorePicker" Title="Select Store" />
            <Entry x:Name="BudgetEntry" Placeholder="Budget" Keyboard="Numeric" />
            <Button Text="Save" Clicked="SaveButton_Clicked"/>
            <Button Text="Delete" Clicked="DeleteButton_Clicked"/>
            <Button StyleClass="FilledTonalButton" Text="Recommend a gift" Clicked="OnRecommendGiftClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</uranium:UraniumContentPage>