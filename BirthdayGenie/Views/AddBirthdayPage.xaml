<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BirthdayGenie.Views.AddBirthdayPage"
             Title="Add Birthday">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Entry x:Name="NameEntry" Placeholder="Name" />
            <DatePicker x:Name="BirthdayPicker" />
            <Picker x:Name="CategoryPicker" Title="Select Category" />
            <Picker x:Name="BrandPicker" Title="Select Brand" />
            <Picker x:Name="StorePicker" Title="Select Store" />
            <Entry x:Name="BudgetEntry" Placeholder="Budget" Keyboard="Numeric" />
            <Button Text="Save" Clicked="OnSaveClicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
